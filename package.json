{
    "name": "wordpress-toolkit",
    "version": "3.0.0",
    "main": "/",
    "type": "module",
    "repository": {},
    "browserslist": [
        "defaults",
        "not ie <= 11"
    ],
    "scripts": {
        "dev": "node autoload.js && vite",
        "watch": "node autoload.js && vite",
        "production": "APP_ENV=production vite build --mode production",
        "build": "APP_ENV=production vite build --mode production",
        "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "format": "prettier --write src"
    },
    "devDependencies": {
        "@babel/preset-react": "^7.27.1",
        "@prettier/plugin-php": "^0.24.0",
        "@types/react": "^19.1.12",
        "@types/react-dom": "^19.1.9",
        "@vitejs/plugin-react": "^5.0.2",
        "@vitejs/plugin-vue": "^6.0.1",
        "cross-env": "^10.0.0",
        "css-loader": "^7.1.2",
        "dotenv": "^17.2.1",
        "eslint": "^9.34.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "postcss-custom-properties": "^14.0.6",
        "prettier": "npm:wp-prettier@^3.0.3",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.91.0",
        "sass-loader": "^16.0.5",
        "style-loader": "^4.0.0",
        "swiper": "^11.2.10",
        "vite": "^7.1.4",
        "vite-plugin-live-reload": "^3.0.5",
        "vite-plugin-wordpress-alias": "^1.0.0",
        "vue": "^3.5.21",
        "vue-template-compiler": "^2.7.16"
    },
    "prettier": {
        "plugins": [
            "@prettier/plugin-php"
        ]
    },
    "dependencies": {
        "gsap": "^3.13.0"
    }
}
